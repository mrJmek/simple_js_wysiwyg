<div class="toolBar">
  <select class="textStyleSelector" data-event="change" data-format-command="formatblock">
    <option selected>- formatting -</option>
    <option value="h1">Title 1 &lt;h1&gt;</option>
    <option value="h2">Title 2 &lt;h2&gt;</option>
    <option value="h3">Title 3 &lt;h3&gt;</option>
    <option value="h4">Title 4 &lt;h4&gt;</option>
    <option value="h5">Title 5 &lt;h5&gt;</option>
    <option value="h6">Subtitle &lt;h6&gt;</option>
    <option value="p">Paragraph &lt;p&gt;</option>
    <option value="pre">Preformatted &lt;pre&gt;</option>
  </select>
  <select class="textStyleSelector" data-format-command="fontname">
    <option class="heading" selected>- font -</option>
    <option>Arial</option>
    <option>Arial Black</option>
    <option>Courier New</option>
    <option>Times New Roman</option>
  </select>
  <select class="textStyleSelector" data-format-command="fontsize">
    <option class="heading" selected>- size -</option>
    <option value="1">Very small</option>
    <option value="2">A bit small</option>
    <option value="3">Normal</option>
    <option value="4">Medium-large</option>
    <option value="5">Big</option>
    <option value="6">Very big</option>
    <option value="7">Maximum</option>
  </select>
  <select class="textStyleSelector" data-format-command="forecolor">
    <option class="heading" selected>- color -</option>
    <option value="red">Red</option>
    <option value="blue">Blue</option>
    <option value="green">Green</option>
    <option value="black">Black</option>
  </select>
  <select class="textStyleSelector" data-format-command="backcolor">
    <option class="heading" selected>- background -</option>
    <option value="red">Red</option>
    <option value="green">Green</option>
    <option value="black">Black</option>
  </select>
</div>
<div class="toolBar">
  <button class="textStyle btn" data-format-command="undo" title="Undo" type="button">
    <span class="dashicons dashicons-undo"></span>
  </button>
  <button class="textStyle btn" data-format-command="redo" title="Redo" type="button">
    <span class="dashicons dashicons-redo"></span>
  </button>
  <button class="textStyle btn" data-format-command="bold" title="Bold" type="button">
    <span class="dashicons dashicons-editor-bold"></span>
  </button>
  <button class="textStyle btn" data-format-command="italic" title="Italic" type="button">
    <span class="dashicons dashicons-editor-italic"></span>
  </button>
  <button class="textStyle btn" data-format-command="underline" title="Underline" type="button">
    <span class="dashicons dashicons-editor-underline"></span>
  </button>
  <button class="textStyle btn" data-format-command="justifyleft" title="Left align" type="button">
    <span class="dashicons dashicons-editor-alignleft"></span>
  </button>
  <button class="textStyle btn" data-format-command="justifycenter" title="Center align" type="button">
    <span class="dashicons dashicons-editor-aligncenter"></span>
  </button>
  <button class="textStyle btn" data-format-command="justifyright" title="Right align" type="button">
    <span class="dashicons dashicons-editor-alignright"></span>
  </button>
  <button class="textStyle btn" data-format-command="insertorderedlist" title="Numbered list" type="button">
    <span class="dashicons dashicons-editor-ol"></span>
  </button>
  <button class="textStyle btn" data-format-command="insertunorderedlist" title="Dotted list" type="button">
    <span class="dashicons dashicons-editor-ul"></span>
  </button>
  <button class="textStyle btn" data-format-command="formatblock" title="Quote" type="button" value="blockquote">
    <span class="dashicons dashicons-editor-quote"></span>
  </button>
  <button class="textStyle btn" data-format-command="outdent" title="Add indentation" type="button">
    <span class="dashicons dashicons-editor-outdent"></span>
  </button>
  <button class="textStyle btn" data-format-command="indent" title="Delete indentation" type="button">
    <span class="dashicons dashicons-editor-indent"></span>
  </button>
</div>
